{
  "name": "@artshllaku/pw-metrics",
  "description": "Generate simple metrics from Playwright JSON reports for CI and dashboards",
  "version": "0.1.4",
  "type": "module",
  "main": "dist/playwrightMetrics.js",
  "types": "dist/playwrightMetrics.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/artshllk/playwright-metrics.git"
  },
  "bin": {
    "pw-metrics": "dist/generateMetrics.js",
    "pw-metrics-summary": "dist/parseResults.js"
  },
  "homepage": "https://github.com/artshllk/playwright-metrics.git",
  "files": [
    "dist",
    "site/index.html",
    "pw-metrics.config.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev:generate": "npm run build && node dist/generateMetrics.js",
    "dev:summary": "npm run build && node dist/parseResults.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "bugs": {
    "url": "https://github.com/artshllk/playwright-metrics/issues"
  },
  "keywords": [
    "playwright",
    "metrics",
    "ci",
    "dashboard"
  ],
  "author": "Art Shllaku",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "vitest": "^3.2.4"
  }
}
