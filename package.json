{
  "name": "@artshllaku/pw-metrics",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/playwrightMetrics.js",
  "types": "dist/playwrightMetrics.d.ts",
  "bin": {
    "pw-metrics": "dist/generateMetrics.js",
    "pw-metrics-summary": "dist/parseResults.js"
  },
  "scripts": {
    "build": "tsc",

    "generate": "node dist/generateMetrics.js",
    "summary": "node dist/parseResults.js",

    "dev:generate": "ts-node src/generateMetrics.ts",
    "dev:summary": "ts-node src/parseResults.ts",

    "metrics:dev": "node dist/generateMetrics.js --json=test-results/results.json --env=DEV",
    "metrics:sit": "node dist/generateMetrics.js --json=test-results/results.json --env=SIT"
  },

  "keywords": [
    "playwright",
    "metrics",
    "ci",
    "dashboard"
  ],
  "author": "Art Shllaku",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  }
}
